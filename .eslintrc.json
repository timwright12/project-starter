{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-in-parens": [
            "error",
            "always"
        ],
        "no-console": [
            "warn"
        ],
        "no-alert": [
            "warn"
        ],
        "camelcase": [
            2
        ]
    }
}